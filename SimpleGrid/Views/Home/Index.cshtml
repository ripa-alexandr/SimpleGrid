        <input class="form-control inputKey" name="Firstname" type="text" placeholder="Firstname" />
    </div>
    <div class="col-lg-2">
        <input class="form-control inputKey" name="Lastname" type="text" placeholder="Lastname" />
    </div>
    <div class="col-lg-2">
        <input class="form-control inputKey" name="Email" type="text" placeholder="Email" />
    </div>
    <div class="col-lg-4">
        <input id="addBtn" class="btn btn-default" type="button" value="Add" />
    </div>
</div>
