</table>

<div class="text-center" id="paging"></div>

@section scripts
{
    <script type="text/javascript">
        $("#paging").addPages($("#simpleGrid"), 10);
        
        $(".pagination").on("click", "li", function () {
            $("#simpleGrid").goToPage(this.innerText);
        });

        $("#simpleGrid thead th").click(function () {
            $("#simpleGrid").sortBy(this.innerText);
        });

        $("#addBtn").click(function () {
            var result = {};
            $('.inputKey').map(function () {
               result[this.name] = $(this).val();
            });

            for (var item in result)
                if (result[item] == "") return;
            
            $("#simpleGrid").addRow(result);
        });
    </script>
}

